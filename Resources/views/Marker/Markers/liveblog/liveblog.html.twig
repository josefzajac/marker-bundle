<div class="liveblog">
    <div id="24lb_thread" class="lb24 lb_{{ id }}"></div>
</div>

<script type="text/javascript">
    (function() {
        var lb24init = function() {
            var lb24 = document.createElement('script');
            lb24.type = 'text/javascript';
            lb24.id = '24lbScript';
            lb24.async = true;
            lb24.charset='utf-8';
            lb24.src = '//v.24liveblog.com/embed/24.js?id={{ id }}';
            (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(lb24);
        };

    {% if js.devMode -%}
        {# to avoid jquery conflicts on dev #}
        setTimeout(function(){ lb24init() }, 5000);
    {% else -%}
        lb24init();
    {% endif %}
    })();
</script>
